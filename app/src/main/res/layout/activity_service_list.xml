<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#C8F1FF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Available Services"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Mobile Repair -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMobile"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp">

            <TextView
                android:text="Mobile Repair"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFB39E"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <!-- Laptop Repair -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLaptop"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp">

            <TextView
                android:text="Laptop Repair"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFE29E"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
